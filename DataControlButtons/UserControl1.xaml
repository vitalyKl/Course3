<UserControl x:Class="DataControlButtons.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataControlButtons"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="80">    
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="BorderBrush" Value="LightGray"/>
            </Style>
        </Grid.Resources>
        <Button Name="BtnAdd" Width="25" Height="25" HorizontalAlignment="Left">
            <fa:ImageAwesome Icon="Plus"/>
        </Button>
        <Button Name="BtnEdit" Width="25" Height="25" HorizontalAlignment="Center">
            <fa:ImageAwesome Icon="Edit"/>
        </Button>
        <Button Name="BtnDelete" Width="25" Height="25" HorizontalAlignment="Right">
            <fa:ImageAwesome Icon="Trash"/>
        </Button>
    </Grid>
</UserControl>
